<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_corner_white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-30dp"
            android:src="@drawable/bg_grass" />

        <LinearLayout
            android:id="@id/linearlayout_left_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@id/relativelayout_left"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.0">

                <TextView
                    android:id="@id/textview_role_desc_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="小女孩"
                    android:textColor="#2c2c2c"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@id/imageview_avatar_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/textview_role_desc_left"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_role_little_girl" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayout_left_right"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@id/button_no"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1.0"
                android:background="@drawable/shape_corner_yellow"
                android:gravity="center"
                android:text="未发现"
                android:textColor="#2c2c2c"
                android:textSize="15dp" />

            <Button
                android:id="@id/button_yes"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.0"
                android:background="@drawable/shape_corner_yellow"
                android:gravity="center"
                android:text="已发现"
                android:textColor="#2c2c2c"
                android:textSize="15dp" />
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="小女孩是否被狼人发现"
        android:textColor="#2c2c2c"
        android:textSize="20dp" />


</RelativeLayout>
